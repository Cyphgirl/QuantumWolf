<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wendy.quantumwolf.MainActivity" >

    <TextView
        android:id="@+id/numPlayersLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/numPlayers"
        android:layout_alignRight="@+id/numPlayers"
        android:text="Number of Players" />

    <TextView
        android:id="@+id/numWolvesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/numPlayersLabel"
        android:layout_alignLeft="@+id/numWolves"
        android:layout_alignRight="@+id/numWolves"
        android:text="Number of Wolves" />

    <NumberPicker
        android:id="@+id/numPlayers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numPlayersLabel"
        android:layout_marginRight="17dp"
        android:layout_toLeftOf="@+id/numWolves" />

    <NumberPicker
        android:id="@+id/numWolves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/numPlayers"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/numPlayers"
        android:layout_below="@+id/numPlayers"
        android:layout_marginTop="50dp"
        android:text="Start Game" />

</RelativeLayout>
